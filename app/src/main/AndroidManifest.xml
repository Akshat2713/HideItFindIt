<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/notes_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/notes_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.HideItFindIt"
        tools:targetApi="31">
        <activity
            android:name=".ImagesList"
            android:exported="false"
            android:label="@string/title_activity_images_list"
            android:theme="@style/Theme.HideItFindIt" />
        <activity
            android:name=".NoteScreen"
            android:exported="false"
            android:label="@string/title_activity_note_screen"
            android:theme="@style/Theme.HideItFindIt" />
        <activity
            android:name=".Video"
            android:exported="false"
            android:label="@string/title_activity_video"
            android:theme="@style/Theme.HideItFindIt" />
        <activity
            android:name=".Image"
            android:exported="false"
            android:label="@string/title_activity_image"
            android:theme="@style/Theme.HideItFindIt" />
        <activity
            android:name=".Vault"
            android:exported="false"
            android:label="@string/title_activity_vault"
            android:theme="@style/Theme.HideItFindIt" />
        <activity
            android:name=".Lock"
            android:exported="false"
            android:label="@string/title_activity_lock"
            android:theme="@style/Theme.HideItFindIt" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.HideItFindIt">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>